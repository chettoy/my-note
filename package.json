{
  "name": "my-note",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://chettoy.github.io/my-note",
  "dependencies": {
    "@mdi/js": "^6.5.95",
    "@mdi/react": "^1.5.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.25.0",
    "canvas": "^2.9.0",
    "dompurify": "^2.3.4",
    "katex": "^0.15.2",
    "marked": "^4.0.10",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.24.3",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "react-transition-group": "^4.4.2",
    "sass": "^1.49.0",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.5",
    "velocity-animate": "^1.5.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "fmt:extract": "formatjs extract 'src/**/*.js*' --out-file src/lang/en.json",
    "fmt:compile": "formatjs compile 'src/lang/en.json' --ast --out-file src/lang/compiled/en.json",
    "fmt:compile:zh": "formatjs compile 'src/lang/zh.json' --ast --out-file src/lang/compiled/zh.json",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!katex)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@formatjs/cli": "^4.5.0",
    "gh-pages": "^3.1.0"
  }
}
